<Window
    x:Class="CVSharpDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:CVSharpDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    Closing="Window_Closing"
    mc:Ignorable="d">
    <UniformGrid Columns="4" Rows="3">
        <UniformGrid.Resources>
            <Style TargetType="Button">
                <Setter Property="Height" Value="30" />
                <Setter Property="Width" Value="80" />
            </Style>
        </UniformGrid.Resources>
        <Button Click="Play_Video" Content="播放视频" />
        <Button Click="Temp_Match" Content="模板匹配" />
        <Button Click="Face_Detect"  Content="人脸检测" />
    </UniformGrid>
</Window>
